<Window x:Class="WpfMOZIIi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mozijegy Foglalás" Height="500" Width="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Mozi Jegyfoglaló rendszer" 
               FontSize="20" FontWeight="Bold" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>

        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False"
                  SelectionMode="Single" 
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Film címe" Binding="{Binding cím}" Width="2*"/>
                <DataGridTextColumn Header="Időpont" Binding="{Binding időpont, StringFormat=HH\\:mm dd.MM}" Width="120"/>
                <DataGridTextColumn Header="Terem" Binding="{Binding Terem}" Width="80"/>
                <DataGridTextColumn Header="Szabad helyek" Binding="{Binding Szabadhelyek}" Width="100"/>
                <DataGridCheckBoxColumn Header="3D" Binding="{Binding _3D}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button Content="Adatok betöltése" Width="120"  Click="adatokbetoltese"/>
            <Button Content="Foglalás" Width="120"  Click="foglalas"/>
            <Button Content="Szabad Helyek" Width="120"  Click="vanhely"/>
            <Button Content="Legnépszerűbb" Width="120"  Click="legnepszerubb"/>
            <Button Content="Átlagos" Width="100"  Click="atlagosszabad"/>
            <Button Content="3D filmek" Width="100"  Click="_3dfilmek"/>
        </StackPanel>
    </Grid>
</Window>